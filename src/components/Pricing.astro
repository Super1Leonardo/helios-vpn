---
const plans = [
  {
    title: "1 месяц",
    amount: 149,
  },
  {
    title: "3 месяца",
    amount: 399,
    discount: 10,
  },
  {
    title: "6 месяцев",
    amount: 749,
    discount: 15,
  },
  {
    title: "12 месяцев",
    amount: 1399,
    discount: 20,
  },
];
---

<div class="grid lg:grid-cols-3 gap-5">
  <div class="element bg-secondary">
    <div class="text-4xl lg:text-5xl py-15 lg:py-30 lg:px-5">
      У нас недорого
    </div>
  </div>
  <div class="lg:col-span-2 grid lg:grid-cols-2 gap-5">
    {
      plans.map((p) => (
        <div class="element bg-secondary flex flex-col justify-between">
          <div class="text-hint">{p.title}</div>
          <div class="text-3xl lg:text-4xl flex items-center gap-2">
            <div>{p.amount} ₽</div>
            {p.discount && (
              <div class="bg-primary px-1 text-xl lg:text-2xl w-fit discount">
                −{p.discount}%
              </div>
            )}
          </div>
        </div>
      ))
    }
  </div>
</div>
